{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "name": "${mod_name}",
  "version": "${mod_version}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "sources": "${mod_sources}",
    "issues": "${mod_issues}",
    "homepage": "${mod_homepage}"
  },
  "license": "${mod_license}",
  "icon": "${mod_icon}",
  "environment": "client",
  "entrypoints": {
    "client": [
      "pigcart.${mod_id}.loaders.fabric.FabricEntrypoint"
    ],
    "modmenu": [
      "pigcart.${mod_id}.loaders.fabric.ModMenuEntrypoint"
    ]
  },
  "mixins": [
    {
      "config": "${mod_id}.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.12.8",
    "fabric-api": "*",
    "minecraft": "${version_range}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://pigc.art/discord"
      }
    },
    "mc-publish": {
      "dependencies": [
        "fabric(required){modrinth:P7dR8mSH}{curseforge:306612}#(ignore:github)",
        "modmenu(recommended){modrinth:mOgUt4GM}{curseforge:308702}#(ignore:github)"
      ]
    }
  }
}
